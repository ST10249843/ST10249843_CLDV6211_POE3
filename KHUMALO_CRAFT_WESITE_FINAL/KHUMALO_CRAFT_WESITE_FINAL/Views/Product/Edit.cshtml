@model KHUMALO_CRAFT_WESITE_FINAL.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Styling for the background color */
    body {
        background-color: #1A1A1A;
        color: white;
    }\

    /* Styling for form labels and inputs */
    .form-control {
        background-color: #333;
        color: white;
        border: 1px solid #555;
    }

        .form-control::placeholder {
            color: #ccc;
        }

    .form-group label {
        color: white;
    }

    /* Styling for buttons */
    .btn-primary {
        background-color: #444;
        border: 1px solid #555;
    }

        .btn-primary:hover {
            background-color: #555;
        }

    /* Styling for secondary buttons */
    .btn-secondary {
        background-color: #555;
        border: 1px solid #666;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #666;
        }
</style>

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label"></label>
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductAvailability" class="control-label"></label>
                <input asp-for="ProductAvailability" class="form-control" />
                <span asp-validation-for="ProductAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Userid" class="control-label"></label>
                <select asp-for="Userid" class="form-control" asp-items="ViewBag.Userid"></select>
                <span asp-validation-for="Userid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <br/>
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
